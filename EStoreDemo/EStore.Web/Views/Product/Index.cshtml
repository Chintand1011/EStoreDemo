@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isAdmin = Context.Session.GetInt32("IsAdmin");
}
    <input type="hidden" id="isAdmin" value="@isAdmin" />
    <div class="main main-raised">
        <div class="container">
            <div class="card card-plain">
                <div class="card-body">
                    <h2 class="card-title">Products</h2>
                @if (isAdmin == 1)
                {
                    <!-- Button to Open Modal -->
                    <button type="button" class="btn btn-dark mb-3" data-bs-toggle="modal" data-bs-target="#productModal">
                        Add New Product
                    </button>
                }
                    <div class="table-responsive">
                        <div class="table table-shopping">
                            <table id="productDataTable" class="table table">
                            <thead class="thead-light">
                                    <tr>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Price</th>
                                        <th>Stock</th>
                                        <th>Action</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Data rows will be inserted here -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
 

<!-- Product Modal -->
<div class="modal fade" id="productModal" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="productModalLabel">Add New Product</h5>
                <button type="button" class="btn btn-primary btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="productForm" novalidate>
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="addProductName" required>
                        <div class="invalid-feedback">
                            Please enter a name.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="addProductDescription" required></textarea>
                        <div class="invalid-feedback">
                            Please enter a description.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Price ($)</label>
                        <input type="number" step="0.01" class="form-control" id="addProductPrice" required min="0">
                        <div class="invalid-feedback">
                            Please enter a valid price (greater than 0).
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="stock" class="form-label">Stock</label>
                        <input type="number" class="form-control" id="addProductStock" required min="1">
                        <div class="invalid-feedback">
                            Please enter a valid stock (greater than 0).
                        </div>
                    </div>
                    <div class="d-flex justify-content-end"><button type="submit" class="btn btn-dark">Add Product</button></div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Edit Product Modal -->
<div class="modal fade" id="editProductModal" tabindex="-1" aria-labelledby="editProductModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="productModalLabel">Edit Product</h5>
                <button type="button" class="btn btn-primary btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="productEditForm" novalidate>
                    <input type="hidden" class="form-control" id="editId" required>
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="editProductName" required>
                        <div class="invalid-feedback">
                            Please enter a name.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="editProductDescription" required></textarea>
                        <div class="invalid-feedback">
                            Please enter a description.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Price ($)</label>
                        <input type="number" step="0.01" class="form-control" id="editProductPrice" required min="0">
                        <div class="invalid-feedback">
                            Please enter a valid price (greater than 0).
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="stock" class="form-label">Stock</label>
                        <input type="number" class="form-control" id="editProductStock" required min="1">
                        <div class="invalid-feedback">
                            Please enter a valid stock (greater than 0).
                        </div>
                    </div>
                    <div class="d-flex justify-content-end"><button type="submit" class="btn btn-dark">Update Product</button></div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/js/product.js"></script>
